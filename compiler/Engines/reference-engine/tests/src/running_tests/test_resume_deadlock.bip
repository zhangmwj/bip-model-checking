@cpp(include="unistd.h")
package test_resume_deadlock
  extern function sleep(int)

  port type Port()

  atom type Atom()
    clock x unit second
 
    port Port p1(), p2(), p3()

    place L0, L1, L2

    initial to L0 do { x = 0; }
 
    on p1 from L0 to L1
      provided (x == 5)
      do { x = 0; sleep(8); }
      resume (x <= 10)

    on p2 from L1 to L2
      provided (x <= 3)
      eager

    invariant inv0 at L0 provided (x <= 5)
  end

  compound type Compound()
    component Atom A()
  end
end
